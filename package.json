{
  "private": true,
  "name": "@my-lawyer/monorepo",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "dev:mobile-app": "turbo dev --filter=\"./apps/mobile-app\"",
    "dev:backend": "turbo dev --filter=\"./apps/backend\"",
    "lint": "turbo lint",
    "test": "turbo test",
    "build": "turbo build"
  },
  "devDependencies": {
    "turbo": "^1.13.4",
    "typescript": "^4.9.5"
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "singleQuote": true,
    "trailingComma": "es5",
    "semi": false
  }
}
